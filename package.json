{
  "name": "ios-chatbot",
  "version": "1.0.0",
  "description": "AI Chatbot Interface",
  "main": "scripts/app.js",
  "type": "module",
  "scripts": {
    "start": "node scripts/app.js",
    "dev": "nodemon scripts/app.js",
    "test": "jest",
    "build": "npm run build:clean && npm run build:server && npm run build:client && npm run build:socket.io && npm run build:nojekyll",
    "build:clean": "rm -rf dist",
    "build:server": "npx babel scripts -d dist/scripts --copy-files",
    "build:client": "cp -R styles dist/ && cp -R js dist/ && cp index.html dist/ && cp -R images dist/ && cp 404.html dist/",
    "build:socket.io": "mkdir -p dist/socket.io && cp node_modules/socket.io/client-dist/socket.io.min.js dist/socket.io/",
    "build:nojekyll": "touch dist/.nojekyll",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [
    "chatbot",
    "AI",
    "interface"
  ],
  "author": "",
  "license": "ISC",
  "nodemonConfig": {
    "watch": [
      "app.js",
      "public"
    ],
    "ext": "js,json,html,css"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf": "^3.1.0",
    "dompurify": "^2.3.3",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "helmet": "^6.0.1",
    "marked": "^4.0.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.7",
    "@babel/core": "^7.25.8",
    "@babel/preset-env": "^7.25.8",
    "gh-pages": "^6.2.0",
    "jest": "^27.0.0",
    "nodemon": "^3.1.7"
  }
}
